<dtml-call expr="REQUEST.set('erro', 0)">

<dtml-call expr="REQUEST.set('id_anexo', _.str(hdn_cod_pessoa)+'_anexo.pdf')">
<dtml-if expr="_.hasattr(sapl_documentos.pessoa,id_anexo)">
 <dtml-let arquivo="_.getattr(sapl_documentos.pessoa,id_anexo) ">
  <dtml-try>
    <dtml-call "sapl_documentos.pessoa.manage_delObjects(id_anexo)">
  <dtml-except>
    <dtml-call expr="REQUEST.set('erro', 1)">
  </dtml-try>
 </dtml-let>
</dtml-if>

  <dtml-if erro>
    <dtml-let mensagem="'Ocorreu um erro ao tentar excluir o anexo PDF!'" tipo_mensagem="'danger'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  <dtml-else>
    <dtml-let mensagem="'Anexo PDF excluÃ­do com sucesso!'" url="'pessoa_mostrar_proc?cod_pessoa='+hdn_cod_pessoa+ '#anexo'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  </dtml-if>
  
<dtml-comment>LOG DE AUDITORIA</dtml-comment>
<dtml-if dbcon_logs>
  <dtml-call expr="zsql.logs_registrar_zsql(
            usuario      = REQUEST['AUTHENTICATED_USER'].getUserName(), 
            data         = DateTime().strftime('%Y-%m-%d %H:%M:%S'),
            modulo       = _.string.split(_['REQUEST']['URL1'],'/')[-1],
            metodo       = 'pessoa_anexo_excluir',
            IP           = pysc.get_ip(),
            dados        = REQUEST.form.items(),
            cod_registro = hdn_cod_pessoa)"> 
</dtml-if>
