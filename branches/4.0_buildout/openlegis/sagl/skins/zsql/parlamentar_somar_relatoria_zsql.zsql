select count(*) as "total"

from
materia_legislativa m,
relatoria r


where
m.ind_excluido = 0 and
r.ind_excluido = 0 and
r.cod_parlamentar = <dtml-sqlvar cod_parlamentar type="int"> and
r.cod_materia = m.cod_materia

