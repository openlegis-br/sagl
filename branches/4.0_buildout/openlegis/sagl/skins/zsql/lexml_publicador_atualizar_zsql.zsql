    tipo              = <dtml-sqlvar tipo            type="string">,
    id_responsavel    = <dtml-sqlvar id_responsavel  type="int"    optional>
    
WHERE 
   cod_publicador = <dtml-sqlvar cod_publicador type="int">

  
