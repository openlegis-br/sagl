<form name="comissao_form" method="post" action="comissao_salvar_proc">
      
  <legend>Dados Básicos</legend>
  <div class="form-row">
     <div class="col-12 col-md-9 mb-3">
       <label for="txt_nom_comissao" class="form-label required">Nome da Comissão</label>
       <input class="form-control" type="text" name="txt_nom_comissao" id="txt_nom_comissao" value="<dtml-var nom_comissao missing>" maxlength="100" required />
       <div class="invalid-feedback">
         Este campo é obrigatório!
       </div>
     </div>
     <div class="col-12 col-md-3 mb-3">
       <label for="txt_sgl_comissao" class="form-label required">Sigla</label>
       <input class="form-control" type="text" name="txt_sgl_comissao" id="txt_sgl_comissao" value="<dtml-var sgl_comissao missing>" maxlength="15" required />
       <div class="invalid-feedback">
         Este campo é obrigatório!
       </div>
     </div>
  </div>
  <div class="form-row">
     <div class="col-6 col-lg-3 mb-3">
       <label for="lst_tip_comissao" class="form-label required">Tipo</label>
       <select class="custom-select" id="lst_tip_comissao" name="lst_tip_comissao">
          <option value=""></option>
          <dtml-in expr="zsql.tipo_comissao_obter_zsql()">   
             <option 
               <dtml-if expr="tip_comissao==comissao_form.tip_comissao and _.has_key('cod_comissao')">
                  selected 
               </dtml-if>
               value="<dtml-var tip_comissao >;<dtml-var sgl_natureza_comissao>"><dtml-var nom_tipo_comissao></option>
          </dtml-in>
       </select>
       <div class="invalid-feedback">
         Este campo é obrigatório!
       </div>
     </div>
     <div class="col-6 col-lg-3 mb-3">
       <label for="txt_dat_criacao" class="form-label required">Data de Criação</label>
       <input class="form-control date" type="text" name="txt_dat_criacao" id="txt_dat_criacao" value="<dtml-var dat_criacao missing>" maxlength="10" autocomplete="off" required />
      <div class="invalid-feedback">
        Este campo é obrigatório!
      </div>
    </div>
     <div class="col-6 col-lg-3 mb-3">
       <label for="txt_dat_extincao">Data de Extinção</label>
       <input class="form-control date" type="text" name="txt_dat_extincao" id="txt_dat_extincao" value="<dtml-var dat_extincao missing null>" maxlength="10" autocomplete="off" />
    </div>
        <script>
        $('#txt_dat_criacao').datepicker({
            locale: 'pt-br',
            icons: {rightIcon: '<i class="fa fa-fw fa-calendar-alt"></i>'},
            format: 'dd/mm/yyyy',
            uiLibrary: 'bootstrap4',
            iconsLibrary: 'fontawesome'
        });
        $('#txt_dat_extincao').datepicker({
            locale: 'pt-br',
            icons: {rightIcon: '<i class="fa fa-fw fa-calendar-alt"></i>'},
            format: 'dd/mm/yyyy',
            uiLibrary: 'bootstrap4',
            iconsLibrary: 'fontawesome'
        });
        </script>
     <div class="col-6 col-lg-3 mb-3">
       <label for="rad_ind_unidade_deliberativa" class="form-label required">Unidade Deliberativa?</label>
       <select class="custom-select" name="rad_ind_unidade_deliberativa" id="rad_ind_unidade_deliberativa" required>
         <option value=""></option>
         <dtml-in expr="[(1,'Sim'),(0,'Não')]">
             <option  
                <dtml-if expr="_.has_key('cod_comissao') and ind_unid_deliberativa==_['sequence-key']"> 
                    selected
