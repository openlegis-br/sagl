       <input class="form-control date" type="text" name="txt_dat_final_prevista_temp" id="txt_dat_final_prevista_temp" value="<dtml-var dat_final_prevista_temp missing null>" maxlength="10" autocomplete="off" />
    </div>
     <div class="col-6 col-md-4 mb-3">
       <label for="txt_dat_prorrogada_temp">Data de Prorrogação</label>
       <input class="form-control date" type="text" name="txt_dat_prorrogada_temp" id="txt_dat_prorrogada_temp" value="<dtml-var dat_prorrogada_temp missing null>" maxlength="10" autocomplete="off" />
    </div>
     <div class="col-6 col-md-4 mb-3">
       <label for="txt_dat_fim_comissao">Data de Término</label>
       <input class="form-control date" type="text" name="txt_dat_fim_comissao" id="txt_dat_fim_comissao" value="<dtml-var dat_fim_comissao missing null>" maxlength="10" autocomplete="off" />
    </div>
  </div>

        <script>
        $('#txt_dat_instalacao_temp').datepicker({
            locale: 'pt-br',
            icons: {rightIcon: '<i class="fa fa-fw fa-calendar-alt"></i>'},
            format: 'dd/mm/yyyy',
            uiLibrary: 'bootstrap4',
            iconsLibrary: 'fontawesome'
        });
        $('#txt_dat_final_prevista_temp').datepicker({
            locale: 'pt-br',
            icons: {rightIcon: '<i class="fa fa-fw fa-calendar-alt"></i>'},
            format: 'dd/mm/yyyy',
