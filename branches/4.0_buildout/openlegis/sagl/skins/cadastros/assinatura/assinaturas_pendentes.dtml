                      </dtml-if>
                          <dtml-var des_tipo_documento> nº <dtml-var num_documento>/<dtml-var ano_documento></a>
                    </dtml-in> 
                  </dtml-in>                             
               <dtml-elif expr="tipo_doc == 'documento'">
