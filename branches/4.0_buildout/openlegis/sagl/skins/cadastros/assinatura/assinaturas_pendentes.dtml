                      </dtml-in>
                    </dtml-in>
                  </dtml-in>                             
               <dtml-elif expr="tipo_doc == 'pauta'">
                  <dtml-in expr="zsql.sessao_plenaria_obter_zsql(cod_sessao_plen=codigo, ind_excluido=0)">
                     <dtml-in expr="zsql.tipo_sessao_plenaria_obter_zsql(tip_sessao=tip_sessao)">                  
