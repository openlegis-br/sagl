<dtml-var standard_html_header>

 <div class="row mb-2">
      <div class="col-12 col-md-8 align-self-center">
        <h1 class="firstHeading">Assuntos de Norma Jurídica</h1>
      </div>
      <div class="col-12 col-md-4 text-left text-md-right">
         <div class="btn-group d-print-none ">
          <a class="btn btn-sm btn-primary d-print-none mb-3" href="assunto_norma_juridica_form"><i class="fa fa-fw fa-plus"></i> Incluir Assunto</a>
         </div>
      </div>
 </div>

<dtml-call "REQUEST.set('existe_seq_anterior', 0)">
<dtml-call "REQUEST.set('existe_seq_posterior', 0)">
<dtml-if page>
  <dtml-call "REQUEST.set('page', _.int(page))">
<dtml-else>
  <dtml-call "REQUEST.set('page', 1)">
</dtml-if>
<dtml-if step>
  <dtml-call "REQUEST.set('step', _.int(step))">
<dtml-else>
  <dtml-call "REQUEST.set('step', 10)">
</dtml-if>
<dtml-call "REQUEST.set('start',(page-1) * step + 1)">
  <dtml-in expr="zsql.assunto_norma_juridica_obter_zsql()" size="step" start="start" orphan=0>
    <dtml-if sequence-start>
       <table class="table">
         <thead class="table-secondary">
          <tr>
           <th>Descrição do Assunto</th>
          </tr>
         </thead>
      <dtml-if previous-sequence>
	<dtml-call "REQUEST.set('existe_seq_anterior', 1)">
      </dtml-if previous-sequence>
    </dtml-if sequence-start>
          <tr> 
            <td width="60%" height="17">
             <a href="assunto_norma_juridica_mostrar_proc?cod_assunto=<dtml-var cod_assunto>"><dtml-var des_assunto></a></td>
           </tr>
    <dtml-if sequence-end>
       </table>
      <dtml-if next-sequence>
	<dtml-call "REQUEST.set('existe_seq_posterior', 1)">
      </dtml-if next-sequence>
<dtml-if expr="existe_seq_anterior or existe_seq_posterior">
     <nav aria-label="Paginação">
       <ul class="pagination justify-content-center">
          <dtml-var "pysc.PageListOutput_pysc('assunto_norma_juridica_index_html', page, step, _['sequence-length'])">
       </ul>
     </nav>
    </dtml-if>
    </dtml-if sequence-end>
 <dtml-else>
    <p>Nenhum assunto cadastrado.</p>
 </dtml-in>

<dtml-var standard_html_footer>
