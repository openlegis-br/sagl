                 <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#iFrameModal" data-title="Edição de Arquivo ODT" data-src="<dtml-var portal_url>/webeditor/editorDocumento?<dtml-var documento>" data-toggle="tooltip" data-placement="bottom" title="Editar Online"><i class="fa fa-fw fa-edit"></i>Editar</button>
  	         <dtml-call expr="REQUEST.set('nome_arquivo_odt',_.str(cod_documento)+'_texto_integral.odt')">
