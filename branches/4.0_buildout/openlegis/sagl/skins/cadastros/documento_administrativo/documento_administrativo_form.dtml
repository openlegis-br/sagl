                 <div class="input-group-append">
                    <input type="button" class="btn btn-secondary" value="Gerar" onclick="javascript:texto_odt_gerar();" />
                 </div>
               </div>
            </dtml-if>
         </dtml-let>
       </dtml-if>
    </div>    
