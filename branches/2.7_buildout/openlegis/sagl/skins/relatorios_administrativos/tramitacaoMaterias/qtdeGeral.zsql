SELECT
     count(distinct m.cod_materia) as "qtde"

FROM
     materia_legislativa m,
     autoria au

WHERE
     m.ind_excluido = 0 and
     au.ind_excluido = 0 and
     au.cod_materia = m.cod_materia and
     m.ano_ident_basica = <dtml-sqlvar ano type="int">
