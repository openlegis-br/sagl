<dtml-call expr="REQUEST.set('erro', 0)">
<dtml-call expr="REQUEST.set('id_texto', _.str(cod_substitutivo)+'_substitutivo.pdf')">
<dtml-if expr="_.hasattr(sapl_documentos.substitutivo,id_texto)">
  <dtml-try>
    <dtml-call "sapl_documentos.substitutivo.manage_delObjects(id_texto)">
  <dtml-except>
    <dtml-call expr="REQUEST.set('erro', 1)">
  </dtml-try>
  
  <dtml-if erro>
    <dtml-let mensagem="'Ocorreu um erro ao excluir o arquivo PDF do substitutivo!'"  tipo_mensagem="'danger'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  <dtml-else>
    <dtml-let mensagem="'Arquivo PDF excluÃ­do com sucesso!'" url="'substitutivo_mostrar_proc?cod_substitutivo='+cod_substitutivo+'&cod_materia='+cod_materia+'&modal=1'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  </dtml-if>
</dtml-if>

<dtml-comment>LOG DE AUDITORIA</dtml-comment>
<dtml-if dbcon_logs>
  <dtml-call expr="zsql.logs_registrar_zsql(
            usuario      = REQUEST['AUTHENTICATED_USER'].getUserName(), 
            data         = DateTime().strftime('%Y-%m-%d %H:%M:%S'),
            modulo       = _.string.split(_['REQUEST']['URL1'],'/')[-1],
            metodo       = 'pdf_substitutivo_excluir',
            IP           = pysc.get_ip(),
            dados        = REQUEST.form.items(),            
            cod_registro = cod_substitutivo)"> 
</dtml-if> 
