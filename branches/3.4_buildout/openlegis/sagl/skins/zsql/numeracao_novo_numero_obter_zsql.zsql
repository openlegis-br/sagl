<dtml-comment>
connection_id : dbcon_interlegis
arguments : cod_materia
max_rows : 1000
max_cache : 100
</dtml-comment>
<dtml-if expr="pysc.verifica_conector_bd_pysc() == 1">
SELECT
    REPLACE(max(num_ordem)+1, '.0','') as novo_numero
FROM 
    numeracao
WHERE 
    cod_materia = <dtml-var cod_materia>

<dtml-else>

SELECT
    MAX(num_ordem)+1 as novo_numero
FROM
    numeracao
WHERE
    cod_materia = <dtml-var cod_materia>

</dtml-if>
