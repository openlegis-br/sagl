<script type="text/javascript" src="&dtml-portal_url;/javascript/jquery.cleditor.xhtml.min.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
      $.cleditor.defaultOptions.width = "98%";
      $.cleditor.defaultOptions.height = "100%";
      $.cleditor.defaultOptions.fonts = "Arial, Verdana";
      $.cleditor.defaultOptions.sizes = "1,2,3,4,5";
      $.cleditor.defaultOptions.controls = "font size | bold italic underline strikethrough style | superscript indent outdent bullets numbering | alignleft center alignright justify | image undo redo cut copy pastetext print source";
      $("textarea").cleditor()[0].focus();
    });
</script>

