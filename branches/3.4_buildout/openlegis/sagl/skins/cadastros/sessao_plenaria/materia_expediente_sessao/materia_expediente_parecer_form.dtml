<!DOCTYPE html>
<html lang="pt-br">
<head>
<dtml-var standard_css_slot>

<script type='text/javascript' src='&dtml-portal_url;/javascript/geral.js'></script>

<script type="text/javascript">
<!--
  function campos_criticar(form){
     var regexp_digitos = /\D+/;
     if (form.txt_dat_ordem.value==""){
         alert("A data do expediente deve ser preenchida");
         form.txt_dat_ordem.focus();
         return false;
      }

     if (form.txt_num_ordem.value==""){
         alert("O numero da ordem deve ser preenchido");
         form.txt_num_ordem.focus();
         return false;
      }
     if (regexp_digitos.test(form.txt_num_ordem.value)){
        alert("O número da ordem deve ser um número natural!");
        form.txt_num_ordem.focus();
        return false;
      }  
      if ((form.txt_num_parecer.value=="") ||
          (form.txt_ano_parecer.value=="") ||
          (form.lst_comissao.selectedIndex == 0) ||
          (form.lst_tip_id_basica.selectedIndex == 0) ||
          (form.lst_tip_sessao.selectedIndex == 0) ||
          (form.txt_num_ident_basica.value=="") || 
          (form.txt_ano_ident_basica.value=="")){
          alert("Os campos de identificação do parecer devem ser preenchidos!");
          form.txt_num_ident_basica.focus();
          return false;
      }
      if (form.txa_txt_observacao.value==""){
         alert("A ementa deve ser preenchida");
         form.txa_txt_observacao.focus();
         return false;
      }

     if (form.lst_tip_quorum.selectedIndex==0){
         alert("O quórum de votação deve ser informado");
         form.lst_tip_quorum.focus();
         return false;
      }

      form.submit();
  }

  function materia_expediente_excluir(){

       if (confirm("Deseja realmente excluir?")) {
          location.href="materia_expediente_excluir_proc?cod_ordem=<dtml-var cod_ordem missing>&cod_sessao_plen=<dtml-var cod_sessao_plen>";
       }
  }

  function ementa_buscar(form){
     if ((form.txt_num_parecer.value!="") && 
         (form.txt_ano_parecer.value!="") &&
         (form.lst_comissao.selectedIndex != 0) &&
         (form.lst_tip_id_basica.selectedIndex != 0) &&
	 (form.txt_num_ident_basica.value!="") && 
	 (form.txt_ano_ident_basica.value!="")){
	 location.href="ementa_parecer_buscar_proc?tip_ident_basica=" +       
         form.lst_tip_id_basica[form.lst_tip_id_basica.selectedIndex].value +
         "&num_ident_basica=" + form.txt_num_ident_basica.value + 
         "&ano_ident_basica=" + form.txt_ano_ident_basica.value + 
         "&num_parecer=" + form.txt_num_parecer.value + 
         "&ano_parecer=" + form.txt_ano_parecer.value + 
         "&cod_comissao=" + form.lst_comissao[form.lst_comissao.selectedIndex].value + 
         "&cod_ordem=" + form.cod_ordem.value +
         "&dat_ordem=" + form.txt_dat_ordem.value + 
         "&num_ordem=" + form.txt_num_ordem.value + 
         "&tip_sessao_plen=" + form.lst_tip_sessao[form.lst_tip_sessao.selectedIndex].value + 
         "&cod_sessao_plen=<dtml-var cod_sessao_plen>";
     }
  }

//-->

function reloadParentAndClose()
{
    // then close this pop-up window
    parent.jQuery.fancybox.close();
} 
</script>
</head>

<body class="modal">

<h1 class="firstHeading">Matéria do Expediente - Parecer de Comissão</h1> 

<h3 align="center"><dtml-var sessao_plenaria_header></h3>

<form id="materia_expediente_parecer_form" name="materia_expediente_parecer_form" method="post" action="materia_expediente_salvar_proc">
<fieldset>
    <legend>Cadastro da Matéria no Expediente - Parecer de Comissão</legend>
      <dtml-in expr="zsql.sessao_plenaria_obter_zsql(cod_sessao_plen = cod_sessao_plen,
                                                                   ind_excluido=0)">
        <table>
         <dtml-if mensagem>
            <tr>
               <td colspan="3">
                 <div class="ui-state-error ui-corner-all" style="padding: 0.3em 1em; margin-bottom: 10px">
                    <p>
                      <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
                      <strong><dtml-var mensagem> </strong>
                    </p>
                 </div>
               </td>
            </tr>
         </dtml-if>
            <tr>
                <td>
                    <label for="txt_dat_ordem">Data da Sessão <span class="campoObrigatorio">&nbsp;</span></label><br />
                    <input type="text" name="txt_dat_ordem"
                           id="txt_dat_ordem"
                           size="10" maxlength="10" readonly="readonly"
                           onBlur="formata_data(form.txt_dat_ordem)"
                        <dtml-if lst_dat_ordem> value="<dtml-var lst_dat_ordem>"
                            <dtml-else> value="<dtml-var dat_inicio_sessao>"
	                    </dtml-if> />
                </td>
                <td>
                    <label for="lst_tip_sessao">Tipo da Sessão<span class="campoObrigatorio">&nbsp;</span></label><br />
                    <select name="lst_tip_sessao" onfocus="this.initialSelect = this.selectedIndex;" onchange="this.selectedIndex = this.initialSelect;">
                        <option>Selecione</option>
                        <dtml-in expr="zsql.tipo_sessao_plenaria_obter_zsql(ind_excluido=0)">
                        <option
                            <dtml-if expr="_.has_key('cod_ordem') and _.int(tip_sessao)==_.int(materia_expediente_parecer_form.tip_sessao)">
                                selected
                            <dtml-elif expr="_.int(tip_sessao)==_.int(materia_expediente_parecer_form.tip_sessao)">
                                selected
                            </dtml-if>
                            value="<dtml-var tip_sessao>"><dtml-var nom_sessao>
                        </option>
                        </dtml-in>
                    </select>
                </td>
	            <td>
                    <label for="txt_num_ordem">Nº Ordem <span class="campoObrigatorio">&nbsp;</span></label><br />
                        <dtml-unless cod_ordem>
                          <dtml-in expr="zsql.expediente_materia_numero_obter_zsql(cod_sessao_plen=cod_sessao_plen)">
                            <dtml-call expr="REQUEST.set('num_ordem', _.int(novo_item))">
                          </dtml-in>
                        </dtml-unless>
	                <input type="text" name="txt_num_ordem" value="<dtml-var num_ordem missing>" size="3" maxlength="3"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="txt_num_parecer">Parecer Nº<span class="campoObrigatorio">&nbsp;</span></label><br />
	            <input type="text" name="txt_num_parecer" size="3" maxlength="3" value="<dtml-var num_parecer missing>" onChange="ementa_buscar(document.materia_expediente_parecer_form)">
                </td>
                <td>
                    <label for="txt_ano_parecer">Ano<span class="campoObrigatorio">&nbsp;</span></label><br />
	            <input type="text" name="txt_ano_parecer" size="4" maxlength="4" value="<dtml-var ano_parecer missing>" onChange="ementa_buscar(document.materia_expediente_parecer_form)">
                </td>
                <td>
                 <label>Comissão<span class="campoObrigatorio">&nbsp;</span></label><br />
                 <select name="lst_comissao" style="max-width: 250px; width: 100%;" onChange="ementa_buscar(document.materia_expediente_parecer_form)">
                  <option>Selecione</option>
                   <dtml-in expr="zsql.comissao_obter_zsql(ind_excluido=0)">
                    <dtml-if expr="dat_extincao is None">
                      <option value="<dtml-var cod_comissao>"
                            <dtml-if expr="REQUEST.has_key('cod_comissao_sel') and _.int(cod_comissao) == _.int(cod_comissao_sel)">
                                selected
                            </dtml-if>>
                            <dtml-var nom_comissao>
                      </option>
                    </dtml-if> 
                   </dtml-in>
                 </select>
                </td>
           </tr>
           <tr>
                <td colspan="3">
                    <label>Matéria<span class="campoObrigatorio">&nbsp;</span></label><br />
                    <select name="lst_tip_id_basica" onChange="ementa_buscar(document.materia_expediente_parecer_form)">
                        <option>Tipo de Matéria</option>
                        <dtml-in expr="zsql.tipo_materia_legislativa_obter_zsql(ind_excluido=0,tip_natureza='P')">
                        <option
                            <dtml-if expr="REQUEST.has_key('tip_ident_basica') and _.int(tip_materia) == _.int(tip_ident_basica)">
                                selected
                            </dtml-if>
                            value="<dtml-var tip_materia>">
                            <dtml-var sgl_tipo_materia> - <dtml-var des_tipo_materia missing>
                        </option>
                        </dtml-in>
                    </select>

                    <input type="text" name="txt_num_ident_basica" size="4" maxlength="5" onChange="ementa_buscar(document.materia_expediente_parecer_form)" value="<dtml-var num_ident_basica missing>" placeholder="Número" />

                    <input type="text" name="txt_ano_ident_basica" size="4" maxlength="4" onChange="ementa_buscar(document.materia_expediente_parecer_form)" value="<dtml-var ano_ident_basica missing>"  placeholder="Ano" />
                </td>
            </tr>
               <tr>
                <td>
                    <label for="rad_tip_votacao">Tipo de Votação <span class="campoObrigatorio">&nbsp;</span></label><br />
                     <dtml-in expr="zsql.tipo_votacao_obter_zsql(tip_votacao='')">
                      <input class="texto" type="radio" id="rad_tip_votacao" name="rad_tip_votacao" value="<dtml-var tip_votacao_sel>"
                        <dtml-if expr="(_.has_key('cod_ordem') and cod_ordem!='')">
                          <dtml-if expr="_.int(materia_expediente_form.tip_votacao)==_.int(tip_votacao_sel)">
                                    checked=1
                          </dtml-if>
                        <dtml-elif expr="des_tipo_votacao == 'Nominal'">checked=1
                        </dtml-if>>
                            <span class="texto"><dtml-var des_tipo_votacao></span>
                      </dtml-in>
                </td>
                <td colspan="2">
                    <label for="lst_tip_quorum">Quórum de Votação<span class="campoObrigatorio">&nbsp;</span></label><br />
                      <select name="lst_tip_quorum">
                        <option value="0"></option>
                        <dtml-in expr="zsql.quorum_votacao_obter_zsql()">
                          <option <dtml-if expr="_.has_key('tip_quorum') and int(tip_quorum)==int(cod_quorum)"> selected<dtml-elif expr="des_quorum == 'Maioria simples'">selected </dtml-if> value="<dtml-var cod_quorum>"><dtml-var des_quorum></option>
                        </dtml-in>
                      </select>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <label for="txa_txt_observacao">Ementa <span class="campoObrigatorio">&nbsp;</span></label><br />
                    <textarea name="txa_txt_observacao" cols="60" rows="4"><dtml-var txt_observacao missing></textarea>
                </td>
            </tr>
        </table>
</dtml-in>
 </fieldset>
         <p align="center">
            <input type="button" class="botao" name="btn_salvar" value="Salvar" onClick="campos_criticar(document.materia_expediente_parecer_form)" />
            <dtml-if cod_ordem>
                <input type="hidden" name="flag_atualizar" value="<dtml-var cod_ordem missing>" />
                <input type="button" class="botaoExtra" name="btn_excluir" value="Excluir" onClick="materia_expediente_excluir()" />
            </dtml-if>
            <input type="button" class="botao" name="btn_fechar" value="Fechar" onclick="javascript:parent.jQuery.fancybox.close();" />
          <dtml-if cod_parecer>
                <dtml-in expr="zsql.relatoria_obter_zsql(cod_relatoria=cod_parecer,ind_excluido=0)">
                   <dtml-call "REQUEST.set('cod_materia', cod_materia)">
              <a class="botao-link" target="_blank" href="&dtml-portal_url;/cadastros/materia/despacho_inicial/despacho_inicial_index_html?cod_materia=<dtml-var cod_materia>" >Ver Parecer</a>
                </dtml-in>
         </dtml-if>
        </p>
        <input type="hidden" name="cod_ordem" value="<dtml-var cod_ordem missing>" />
        <input type="hidden" name="cod_parecer" value="<dtml-var cod_parecer missing>" />
        <input type="hidden" name="cod_sessao_plen" value="<dtml-var cod_sessao_plen missing>" />
</form>
</body>
</html>
