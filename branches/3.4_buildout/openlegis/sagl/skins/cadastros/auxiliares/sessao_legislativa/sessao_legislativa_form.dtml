<form name="sessao_legislativa_form" method="post" action="sessao_legislativa_salvar_proc">

<a id="ajuda" href="<dtml-var portal_url>/ajuda/sessao_legislativa">Ajuda</a>

<h1 class="firstHeading"> Tabelas Auxiliares </h1> 

<table class="table">
  <tr> 
    <td>| <a href="index_html">Iní­cio</a> |</td>
   </tr>
</table>  

<fieldset><legend>Sessão Legislativa</legend>
  <input type="hidden" name="hdn_cod_sessao_leg" value="<dtml-var cod_sessao_leg missing>" />
  <dtml-try>
     <input type="hidden" name="hdn_num_legislatura" value="<dtml-var num_legislatura>" />    
  <dtml-except>
     <input type="hidden" name="hdn_num_legislatura" value="<dtml-var hdn_num_legislatura>" />
  </dtml-try>

       <table class="table">
         <tr>
           <td width="25%">Número <span class="campoObrigatorio"></span><br />
            <input class="form-control" type="text" name="txt_num_sessao_leg" value="<dtml-var num_sessao_leg missing>" size="10" /></td>
           <td width="25%">Tipo <span class="campoObrigatorio"></span><br />
              <select class="custom-select"  name="lst_tip_sessao_leg" size="1">
               <dtml-in expr="['Ordinária','Extraordinária']">
                 <option <dtml-if expr="_.has_key('tip_sessao_leg') and tip_sessao_leg == _['sequence-item'][0]">selected</dtml-if> value="<dtml-var expr="_['sequence-item'][0]">"><dtml-var expr="_['sequence-item']"></option>
               </dtml-in>
            </select></td>
           <td width="25%">Data Iní­cio <span class="campoObrigatorio"></span><br />
            <input class="form-control" type="text" name="txt_dat_inicio" value="<dtml-var dat_inicio_conv missing>" size="10" maxlength="10" onBlur="formata_data(form.txt_dat_inicio)" />
            <span class="nota">(dd/mm/aaaa)</span></td>
           <td width="25%">Data Fim <span class="campoObrigatorio"></span><br />
             <input class="form-control" type="text" name="txt_dat_fim" value="<dtml-var dat_fim_conv missing>" size="10" maxlength="10" onBlur="formata_data(form.txt_dat_fim)" />
             <span class="nota">(dd/mm/aaaa)</span></td>
        </tr>
        <tr> 
           <td colspan="2">Iní­cio Intervalo<br />
             <input class="form-control" type="text" name="txt_dat_inicio_intervalo" value="<dtml-var dat_inicio_intervalo missing="" null="">" size="10" maxlength="10" onBlur="formata_data(form.txt_dat_inicio_intervalo)" />
             <span class="nota">(dd/mm/aaaa)</span></td>
           <td colspan="2">Fim Intervalo<br />
            <input class="form-control" type="text" name="txt_dat_fim_intervalo" value="<dtml-var dat_fim_intervalo missing="" null="">" size="10" maxlength="10" onBlur="formata_data(form.txt_dat_fim_intervalo)" />
            <span class="nota">(dd/mm/aaaa)</span></td>
        </tr>
     </table>
  <center><p>
  <input class="btn btn-primary" type="button" name="btn_sessao_leg_salvar" value="Salvar" onClick="campos_criticar(document.sessao_legislativa_form)" >
  <dtml-if cod_sessao_leg>
    <input class="btn btn-primary" type="button" name="btn_sessao_leg_excluir" value="Excluir" onClick="sessao_leg_excluir(document.sessao_legislativa_form)" >
  </dtml-if>
  </p></center>
</fieldset>
</form>

