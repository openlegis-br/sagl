</script>

<form name="nivel_instrucao_form" method="post" action="nivel_instrucao_salvar_proc">  

<input type="hidden" name="hdn_cod_nivel_instrucao" value=0 />   
<input type="hidden" name="hdn_des_nivel_instrucao" />  

<a id="ajuda" href="<dtml-var portal_url>/ajuda/nivel_instrucao">Ajuda</a>

<h1 class="firstHeading"> Tabelas Auxiliares </h1> 

<fieldset><legend>Níveis de Instrução</legend>
  <dtml-in expr="zsql.nivel_instrucao_obter_zsql()">
    <dtml-if sequence-start>
       <table class="table">
	<tr>
               <th width="10%">Código</th>
               <th width="65%">Nível de Instrução</th>
               <th width="25%">Ação</th>
        </tr>
             
     </dtml-if sequence-start>
             <tr> 
               <td width="10%"><dtml-var cod_nivel_instrucao></td>
               <td width="65%"><input class="form-control" type="text" name="txt_des_nivel_instrucao_<dtml-var cod_nivel_instrucao>" value="<dtml-var des_nivel_instrucao>" size="40" maxlength="50" /></td>
               <td width="25%">
                <a href="javascript:submeter(<dtml-var cod_nivel_instrucao>,document.nivel_instrucao_form.txt_des_nivel_instrucao_<dtml-var cod_nivel_instrucao>,document.nivel_instrucao_form)">
                 Atualizar</a> / <a href="javascript:excluir(<dtml-var cod_nivel_instrucao>)">Excluir</a>
             </tr>
    <dtml-if sequence-end>
      </table>
    </dtml-if sequence-end>
 <dtml-else>
   <table class="table">
     <tr><td>Nenhum nível de instrução cadastrado.</td></tr>
   </table>
 </dtml-in>
<table class="table">
  <tr>
     <td align="center">
      <input class="form-control" type="text" name="txt_des_nivel_instrucao" size="40" /><br />
            <input class="btn btn-primary" type="button" name="btn_nivel_instrucao_incluir" value="Incluir Nível de Instrução" 
                onClick="submeter(0, document.nivel_instrucao_form.txt_des_nivel_instrucao, document.nivel_instrucao_form)" />
     </td>
   </tr>
</table>
</fieldset>
</form>
<dtml-var standard_html_footer>
