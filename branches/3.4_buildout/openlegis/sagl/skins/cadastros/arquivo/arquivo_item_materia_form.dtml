<!DOCTYPE html>
<html lang="pt-br">
<head>
<dtml-var standard_css_slot>

<script type="text/javascript" src="<dtml-var portal_url>/javascript/jquery.min.js"></script>

<script type="text/javascript" src="<dtml-var portal_url>/javascript/jquery.datepick.js"></script>

<script type='text/javascript' src='<dtml-var portal_url>/javascript/geral.js'></script>

<script type="text/javascript" src="javascript/data_validar.js" "></script>

<script type="text/javascript">

  function campos_criticar(form){

     if ((form.lst_tip_id_basica.selectedIndex==0) ||
         (form.txt_num_ident_basica.value=="") || 
         (form.txt_ano_ident_basica.value=="")){
         alert("Os campos de identificação da matéria devem ser preenchidos!");
         form.txt_num_ident_basica.focus();
         return false;
     }

     if (form.txt_dat_arquivamento.value==""){
         alert("A data de arquivamento deve ser preenchida");
         form.txt_dat_arquivamento.focus();
         return false;
      }

     if (form.txt_dat_arquivamento.value!="" && !IsValidDate(form.txt_dat_arquivamento.value)){
         alert("Digite uma data de arquivamento válida!");
         form.txt_dat_arquivamento.focus();
         form.txt_dat_arquivamento.select();
         return false;
      }

      if (form.txa_txt_ementa.value == "") {
         alert("A ementa deve estar preenchida!");
         form.txa_txt_ementa.focus();
         return false;
      }

      if (form.lst_tip_suporte.selectedIndex==0){
          alert("Selecione um tipo de suporte!");
          form.lst_tip_suporte.focus();
          return false;
      }

      form.submit();
  }

  function ementa_buscar(form){
   if ((form.lst_tip_id_basica.selectedIndex != 0) &&
      (form.txt_num_ident_basica.value!="") && 
      (form.txt_ano_ident_basica.value!="")){
      location.href="ementa_materia_buscar_proc?tip_ident_basica="+form.lst_tip_id_basica[form.lst_tip_id_basica.selectedIndex].value+"&num_ident_basica="+form.txt_num_ident_basica.value+"&ano_ident_basica="+form.txt_ano_ident_basica.value+"&cod_recipiente="+form.hdn_cod_recipiente.value;
    }
  }

  function reloadParentAndClose(){
   parent.jQuery.fancybox.close();
  }
 
</script>

<script type="text/javascript">
  $(function() {
      $('#txt_dat_arquivamento').datepick();
  });
</script>

</head>

<body>

<h1 class="firstHeading">Arquivo Permanente</h1>

<h3><dtml-var arquivo_recipiente_header></h3>

<form name="arquivo_item_materia_form" method="post" action="arquivo_item_salvar_proc">
<fieldset>
  <legend>Inclusão de Matéria no Recipiente</legend>
    <table class="table">
      <tr> 
        <td width="50%"><label for="lst_tip_id_basica">Matéria Legislativa</label><span class="campoObrigatorio"></span><br>
           <select class="custom-select"  name="lst_tip_id_basica" id="lst_tip_id_basica" onChange="ementa_buscar(document.arquivo_item_materia_form)">
            <option>
              <dtml-in expr="zsql.tipo_materia_legislativa_obter_zsql(ind_excluido=0)">
                 <option
                    <dtml-if tip_id_basica_sel>
                      <dtml-if expr="_.int(tip_materia) == _.int(tip_id_basica_sel)">
                         selected
                      </dtml-if>
                   </dtml-if>
                    value="<dtml-var tip_materia missing>"> <dtml-var sgl_tipo_materia> - <dtml-var des_tipo_materia>
                   </option>
              </dtml-in>
           </select></td>
        <td>
           <label for="txt_num_ident_basica">Número</label><span class="campoObrigatorio"></span><br>
            <input class="form-control" type="text" name="txt_num_ident_basica" id="txt_num_ident_basica" size="5" value="<dtml-var num_ident_basica_sel missing>" maxlength="5" onChange="ementa_buscar(document.arquivo_item_materia_form)">
        </td>
        <td>
           <label for="txt_ano_ident_basica">Ano</label><span class="campoObrigatorio"></span><br>
            <input class="form-control" type="text" name="txt_ano_ident_basica" id="txt_ano_ident_basica" size="4" value="<dtml-var ano_ident_basica_sel missing>" maxlength="4" onChange="ementa_buscar(document.arquivo_item_materia_form)">
        </td>
      </tr>
      <tr>
        <td colspan="3"><label for="txa_txt_ementa">Ementa</label> <span class="campoObrigatorio"></span><br/>
          <textarea class="form-control"  name="txa_txt_ementa" id="txa_txt_ementa" cols="65" rows="4" readonly><dtml-var txt_ementa missing></textarea>
        </td>
      </tr>
      <tr>
        <td><label for="txt_dat_arquivamento">Data Arquivamento<span class="campoObrigatorio"></span></label><br />
            <dtml-unless dat_arquivamento>
               <dtml-call expr="REQUEST.set('dat_arquivamento', _.DateTime().strftime('%d/%m/%Y'))">
            </dtml-unless>
            <input class="form-control" type="text" id="txt_dat_arquivamento" name="txt_dat_arquivamento" size="10" maxlength="10" value="<dtml-var dat_arquivamento missing null="">" onBlur="formata_data(form.txt_dat_arquivamento)" onChange="javascript:form.hdn_alterou.value=1" />
        </td>
        <td colspan="2"><label for="lst_tip_suporte">Tipo Suporte <span class="campoObrigatorio"></span></label><br />
           <select class="custom-select"  id="lst_tip_suporte" name="lst_tip_suporte">
             <option value="0">Selecione</option>
             <dtml-in expr="zsql.arquivo_tipo_suporte_obter_zsql(ind_excluido=0)">
             <option 
               <dtml-if tip_suporte_sel>
                 <dtml-if expr="_.int(tip_suporte) == _.int(tip_suporte_sel)">
                    selected
                 </dtml-if>
               <dtml-else>
                 <dtml-if expr="_.int(tip_suporte) == 1">
                    selected
                 </dtml-if> 
               </dtml-if>
                    value="<dtml-var tip_suporte>">
                    <dtml-var des_tipo_suporte>
             </option>
             </dtml-in>
           </select>
        </td>
      <tr>
        <td colspan="3"><label for="txa_txt_observacao">Observações</label> 
           <textarea class="form-control"  id="txa_txt_observacao" name="txa_txt_observacao" cols="67" rows="4" onChange="javascript:form.hdn_alterou.value=1"><dtml-var txt_observacao missing null=""></textarea>
        </td>
      </tr>
    </table>
</fieldset>

<p align="center">
  <input class="btn btn-primary" type="button" class="botao" name="button" value="Salvar" onClick="campos_criticar(document.arquivo_item_materia_form)" />
  <input class="btn btn-primary" type="button" class="botao" name="btn_fechar" value="Fechar" OnClick="reloadParentAndClose();" />
</p>
  <input type="hidden" name="hdn_cod_recipiente" value="<dtml-var cod_recipiente>"/>
  <input type="hidden" name="hdn_cod_materia" value="<dtml-var cod_materia_sel missing>"/>
</form>

</body>

</html>



