<dtml-call expr="REQUEST.set('erro', 0)">
<dtml-call expr="REQUEST.set('id_texto', _.str(cod_substitutivo)+'_substitutivo.pdf')">
<dtml-if expr="_.hasattr(sagl_documentos.substitutivo,id_texto)">
  <dtml-try>
    <dtml-call "sagl_documentos.substitutivo.manage_delObjects(id_texto)">
  <dtml-except>
    <dtml-call expr="REQUEST.set('erro', 1)">
  </dtml-try>
  
  <dtml-if erro>
    <dtml-let mensagem="'Ocorreu um erro ao tentar excluir o arquivo PDF desse substitutivo!'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  <dtml-else>
    <dtml-let mensagem="'Arquivo PDF excluÃ­do com sucesso!'" sucesso="1" url="'substitutivo_mostrar_proc?cod_substitutivo='+cod_substitutivo+'&cod_materia='+cod_materia">
      <dtml-var mensagem_emitir>
    </dtml-let>
  </dtml-if>
</dtml-if>
