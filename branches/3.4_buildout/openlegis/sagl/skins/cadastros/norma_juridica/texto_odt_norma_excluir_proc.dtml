<dtml-call expr="REQUEST.set('erro', 0)">
<dtml-call expr="REQUEST.set('id_texto', _.str(cod_norma)+'_texto_integral.odt')">
<dtml-if expr="_.hasattr(sapl_documentos.norma_juridica,id_texto)">
  <dtml-try>
    <dtml-call "sapl_documentos.norma_juridica.manage_delObjects(id_texto)">
  <dtml-except>
    <dtml-call expr="REQUEST.set('erro', 1)">
  </dtml-try>
  
  <dtml-if erro>
    <dtml-let mensagem="'Ocorreu um erro ao tentar excluir o arquivo ODT dessa norma!'">
      <dtml-var mensagem_emitir>
    </dtml-let>
  <dtml-else>
    <dtml-let mensagem="'Arquivo ODT excluÃ­do com sucesso!'" sucesso="1" url="'norma_juridica_mostrar_proc?cod_norma='+cod_norma">
      <dtml-var mensagem_emitir>
    </dtml-let>
  </dtml-if>
</dtml-if>
