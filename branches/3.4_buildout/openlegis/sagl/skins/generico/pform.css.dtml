.pf-form:after,
.pf-form fieldset:after {
  display: block;
  height: 0;
  clear: both;
  content: ".";
  visibility: hidden;
}

.pf-form fieldset {
  padding: 5.6px 10px 12px;
  border: 1px solid #cccccc;
}

.pf-form fieldset.pf-group {
  display: block;
  margin-bottom: 10px;
  clear: left;
}

.pf-form .pf-clearing {
  height: 1px;
  clear: both;
}

.pf-form .pf-element {
  float: left;
  padding-bottom: 10px;
  clear: left;
}

.pf-form .pf-element.pf-full-width {
  width: 100%;
  height: 24px;
}


.pf-form .pf-element .pf-label,
.pf-form .pf-element .pf-note {
  float: left;
  width: 180px;
}

#login .pf-form .pf-element .pf-label,
#login .pf-form .pf-element .pf-note {
  float: left;
  width: 140px;
}

.pf-form .pf-element .pf-note {
  margin-top: .5em;
  clear: left;
  font-size: 75%;
  opacity: .8;
}

.pf-form .pf-element .pf-required {
  color: #cb2912;
}

.pf-form .pf-element .pf-completed,
.pf-form .pf-element.pf-completed .pf-required {
  color: #00cc00;
}

.pf-form .pf-element .pf-field {
  float: none;
}

.pf-form .pf-element .pf-field.pf-full-width {
  display: block;
  margin-left: 180px;
}

.pf-form .pf-element .pf-group {
  display: block;
  margin-left: 180px;
  padding-left: 0;
}

.pf-form .pf-element .pf-group .pf-note {
  display: inline;
  width: auto;
  margin-top: 0;
  clear: none;
  text-align: left;
}

.pf-form.pf-labels-right .pf-label,
.pf-form .pf-labels-right .pf-label,
.pf-form.pf-labels-right .pf-note,
.pf-form .pf-labels-right .pf-note {
  text-align: right;
}

.pf-form .pf-labels-right.pf-note,
.pf-form .pf-labels-right.pf-label {
  text-align: right;
}

.pf-form.pf-labels-left .pf-label,
.pf-form .pf-labels-left .pf-label,
.pf-form.pf-labels-left .pf-note,
.pf-form .pf-labels-left .pf-note {
  text-align: left;
}

.pf-form .pf-labels-left.pf-note,
.pf-form .pf-labels-left.pf-label {
  text-align: left;
}

.pf-form .pf-buttons {
  padding-bottom: 0;
  padding-left: 180px;
  clear: both;
}

#login .pf-form .pf-buttons {
  padding-bottom: 0;
  padding-left: 140px;
  clear: both;
}

.pf-form .pf-buttons.pf-centered {
  width: 100%;
  padding-left: 0;
  text-align: center;
}

.pf-form .pf-buttons .pf-button {
  float: none;
  margin-bottom: 10px;
}

.pf-form .pf-heading {
  width: 100%;
  padding-bottom: 0;
  margin-bottom: 10px;
  border-bottom: 1px solid #cccccc;
}

.pf-form.pf-layout-block .pf-element .pf-label,
.pf-form .pf-layout-block .pf-element .pf-label,
.pf-form .pf-element.pf-layout-block .pf-label,
.pf-form.pf-layout-block .pf-element .pf-note,
.pf-form .pf-layout-block .pf-element .pf-note,
.pf-form .pf-element.pf-layout-block .pf-note {
  display: block;
  float: none;
  width: auto;
  margin-bottom: 10px;
}

.pf-form.pf-layout-block .pf-element .pf-group,
.pf-form .pf-layout-block .pf-element .pf-group,
.pf-form .pf-element.pf-layout-block .pf-group {
  margin-left: 0;
}

.pf-form.pf-layout-block .pf-element .pf-group .pf-note,
.pf-form .pf-layout-block .pf-element .pf-group .pf-note,
.pf-form .pf-element.pf-layout-block .pf-group .pf-note {
  display: inline;
  width: auto;
  margin-top: 0;
  clear: none;
  text-align: left;
}

.pf-form.pf-layout-block .pf-element .pf-field,
.pf-form .pf-layout-block .pf-element .pf-field,
.pf-form .pf-element.pf-layout-block .pf-field {
  float: none;
  margin-left: 0;
}

.pf-form.pf-layout-block .pf-element .pf-field.pf-full-width,
.pf-form .pf-layout-block .pf-element .pf-field.pf-full-width,
.pf-form .pf-element.pf-layout-block .pf-field.pf-full-width {
  display: block;
  margin-left: 0;
}

.pf-form.pf-layout-block .pf-buttons,
.pf-form .pf-layout-block .pf-buttons,
.pf-form .pf-buttons.pf-layout-block {
  padding-left: 0;
  margin-left: -20px;
}

@media print {
  .pf-form {
    display: block;
  }
}

@media (max-width: 480px) {
  .pf-form {
    display: block;
  }
  .pf-form .pf-element {
    float: none;
    margin-bottom: 5px !important;
    clear: left;
  }
  .pf-form .pf-element.pf-full-width .pf-full-width {
    padding-right: .2em;
  }
  .pf-form .pf-element .pf-label,
  .pf-form .pf-element .pf-note {
    display: block;
    float: none;
    width: auto;
    margin-bottom: 0;
    text-align: left;
  }
  .pf-form .pf-element .pf-field {
    margin-top: 2px;
    margin-left: 0 !important;
  }
  .pf-form .pf-element .pf-field.pf-full-width {
    margin-left: 5px;
  }
  .pf-form .pf-element .pf-group {
    display: block;
    margin-left: 0 !important;
  }
  .pf-form .pf-buttons {
    padding-left: 0;
  }
  .pf-form .pf-buttons .pf-button {
    margin-top: 5px;
  }
}

@media (min-width: 481px) and (max-width: 767px) {
  .pf-form .pf-element .pf-label,
  .pf-form .pf-element .pf-note {
    width: 180px;
  }
  .pf-form .pf-element .pf-field {

  }
  .pf-form .pf-element .pf-field.pf-full-width {
    margin-left: 185px;
  }
  .pf-form .pf-element .pf-group {
    margin-left: 180px;
  }
  .pf-form .pf-buttons {
    padding-left: 170px;
  }
  .pf-form .pf-buttons .pf-button {
    margin-left: 15px;
  }
  .pf-form.pf-layout-block .pf-buttons,
  .pf-form .pf-layout-block .pf-buttons,
  .pf-form .pf-buttons.pf-layout-block {
    margin-left: -15px;
  }
}

@media (min-width: 1281px) and (max-width: 1839px) {
  .pf-form .pf-element .pf-label,
  .pf-form .pf-element .pf-note {
    width: 230px;
  }
  .pf-form .pf-element .pf-field {

  }
  .pf-form .pf-element .pf-field.pf-full-width {
    margin-left: 235px;
  }
  .pf-form .pf-element .pf-group {
    margin-left: 230px;
  }
  .pf-form .pf-buttons {
    padding-left: 230px;
  }
  .pf-form .pf-buttons .pf-button {
    margin-left: 5px;
  }
  .pf-form.pf-layout-block .pf-buttons,
  .pf-form .pf-layout-block .pf-buttons,
  .pf-form .pf-buttons.pf-layout-block {
    margin-left: -20px;
  }
}

@media (min-width: 1840px) {
  .pf-form .pf-element .pf-label,
  .pf-form .pf-element .pf-note {
    width: 280px;
  }
  .pf-form .pf-element .pf-field {
    margin-left: 5px;
  }
  .pf-form .pf-element .pf-field.pf-full-width {
    margin-left: 290px;
  }
  .pf-form .pf-element .pf-group {
    margin-left: 280px;
  }
  .pf-form .pf-buttons {
    padding-left: 265px;
  }
  .pf-form .pf-buttons .pf-button {
    margin-left: 25px;
  }
  .pf-form.pf-layout-block .pf-buttons,
  .pf-form .pf-layout-block .pf-buttons,
  .pf-form .pf-buttons.pf-layout-block {
    margin-left: -25px;
  }
}
